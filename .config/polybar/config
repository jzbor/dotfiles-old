[module/workspaces]
type = internal/i3

pin-workspaces = true
enable-click = true
enable-scroll = true

;label-active = 
;label-occupied = 
;label-urgent = 
;label-empty = 
label-focused = %index%
label-visible = %index%
label-urgent = %index%
label-unfocused = %index%

index-sort = true

format = <label-state>

label-focused-foreground = ${color.accent}
label-urgent-foreground = ${color.red}
label-unfocused-foreground = ${color.modulefg-alt}

label-active-padding = 4
label-urgent-padding = 4
label-unfocused-padding = 4

label-seperator = |
label-seperator-padding = 2
label-seperator-foreground = $(color.accent)

